public class Course {
    private String name;

    public Course(String name) {
        this.name = name;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }
}
import java.util.Scanner;

public class Plataforma {
    // ... (Otros)

    private Course[] cursosDisponibles;

    public Plataforma() {
        // ... (inicializar)
        this.cursosDisponibles = new Course[5];
    }

    public void agregarCurso(Course curso) {
        cursosDisponibles[numCursos++] = curso;
    }

    // ... (Otros metodos)

    public void mostrarCursos() {
        System.out.println("Seleccione un curso:");
        for (int i = 0; i < numCursos; i++) {
            System.out.println((i + 1) + ". " + cursosDisponibles[i].getName());
        }
    }

    public static void main(String[] args) {
        Plataforma plataforma = new Plataforma();
        Scanner scanner = new Scanner(System.in);

        // Agregar mas cursos en caso de ser necesario
        plataforma.agregarCurso(new Course("Matematicas"));
        plataforma.agregarCurso(new Course("Lenguaje"));
        plataforma.agregarCurso(new Course("Sociales"));
        plataforma.agregarCurso(new Course("Ingles"));
        plataforma.agregarCurso(new Course("Historia"));

        while (true) {
            plataforma.mostrarOpciones();
            int opcion = scanner.nextInt();

            switch (opcion) {
                case 1:
                    plataforma.mostrarCursos();
                    int courseOption = scanner.nextInt();
                    plataforma.matricularUsuarioEnCurso(0, courseOption - 1);
                    break;
                // ...
                default:
                    System.out.println("Opción inválida");
            }
        }
    }
}

