import java.util.Scanner;

public class Plataforma {
    private Usuario[] usuarios;
    private Curso[] cursosDisponibles;
    private int numUsuarios;
    private int numCursos;

    public Plataforma() {
        this.usuarios = new Usuario[10];
        this.cursosDisponibles = new Curso[5];
        this.numUsuarios = 0;
        this.numCursos = 0;
    }

    public void agregarCurso(Curso curso) {
        cursosDisponibles[numCursos++] = curso;
    }

    public void inscribirUsuario(Usuario usuario) {
        usuarios[numUsuarios++] = usuario;
    }

    public void matricularUsuarioEnCurso(int usuarioIndex, int cursoIndex) {
        usuarios[usuarioIndex].setCursoActual(cursosDisponibles[cursoIndex]);
    }

    public void mostrarOpciones() {
        System.out.println("Bienvenido a la mejor plataforma de cursos sobre programacion ¡¡");
        System.out.println("Seleccione una opción:");
        System.out.println("1. Agregar curso");
        System.out.println("2. Inscribir usuario");
        System.out.println("3. Matricular usuario en curso");
        System.out.println("4. Simular progreso del curso");
    }

    public static void main(String[] args) {
        Plataforma plataforma = new Plataforma();
        Scanner scanner = new Scanner(System.in);

        while (true) {
            plataforma.mostrarOpciones();
            int opcion = scanner.nextInt();

            switch (opcion) {
                case 1:
                    // Se agregara el curso
                    break;
                case 2:
                    // Se agregara a el usuario
                    break;
                case 3:
                    // En este punto el usuario se inscribira en cualquier curso
                    break;
                case 4:
                    // Guardara el progreso del usuaario en el curso
                    break;
                default:
                    System.out.println("Opción inválida")
            }
        }
    }
}

import java.util.Scanner;

public class Registrarse_IniciarSesión {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Registro de los usuarios
        int numUsers;
        String[] nombre;
        String[] correoelectronico;
        String[] contraseña;

        System.out.println("¿Cuántos usuarios deseas registrar?");
        numUsers = scanner.nextInt();
        nombre = new String[numUsers];
        correoelectronico = new String[numUsers];
        contraseña = new String[numUsers];

        for (int i = 0; i < numUsers; i++) {
            System.out.println("Ingresa el nombre del usuario " + (i + 1));
            nombre[i] = scanner.next();
            System.out.println("Ingresa el correo electrónico del usuario " + nombre[i]);
            correoelectronico[i] = scanner.next();
            System.out.println("Ingresa la contraseña del usuario " + nombre[i]);
            contraseña[i] = scanner.next();
            System.out.println("¡Usuario registrado con éxito!");
        }

        // Inicio de sesión
        boolean loggedIn = false;
        int tries = 0;

        while (!loggedIn && tries < 5) {
            System.out.println("Ingresa tu nombre de usuario:");
            String inputNombre = scanner.next();
            System.out.println("Ingresa tu contraseña:");
            String inputContraseña = scanner.next();

            for (int i = 0; i < numUsers; i++) {
                if (inputNombre.equals(nombre[i]) && inputContraseña.equals(contraseña[i])) {
                    System.out.println("Acceso concedido. ¡Bienvenido, " + inputNombre + "!");
                    loggedIn = true;
                    break;
                }
            }

            if (!loggedIn) {
                System.out.println("Usuario o contraseña incorrectos. Intenta nuevamente.");
                tries++;
            }
        }

        if (!loggedIn) {
            System.out.println("Has excedido el número máximo de intentos. El programa se detiene.");
        }
    }
}
