import java.util.Scanner;

import javax.sound.midi.Soundbank;

public class fti {
	static Scanner scanner= new Scanner(System.in);
	private static int tries;
	private static boolean loggedIn;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Bienvenido a Cursos online M,T & G en que curso desearia inscribirse");
		System.out.println("1[Matematicas]");
		System.out.println("2[Lenguaje]");
		System.out.println("3[Sociales]");
		System.out.println("4[Ingles]");
		System.out.println("5[Historia]");
		System.out.println("6[Salir]");

		System.out.println("Por favor digite la opcion en la que se desea inscribir ");
		int opcion = 0;
		
		do {
			
			 opcion = scanner.nextInt();
			switch (opcion) {
		case 1:
		   Matematicas();
			break;
		case 2:
			Lenguaje();
			break;
		case 3:
			Sociales();
			break;
		case 4:
			Ingles();
			break;
		case 5:
			Historia();
			break;
		case 6:
			break;
		default:
			System.out.println("Opcion Invalida");
		}
			
		}while(opcion!=6);
	
		System.out.println("Fin del programa");

	}
	static void Matematicas(){
		System.out.println("Escogio Matematicas");
		 int numUsers;
	        String[] nombre;
	        String[] correoelectronico;
	        String[] contraseña;
	        System.out.println("Presione 1 para continuar");
	        numUsers = scanner.nextInt();
	        nombre = new String[numUsers];
	        correoelectronico = new String[numUsers];
	        contraseña = new String[numUsers];

	        for (int i = 0; i < numUsers; i++) {
	            System.out.println("Ingresa el nombre del usuario " + (i + 1));
	            nombre[i] = scanner.next();
	            System.out.println("Ingresa el correo electrónico del usuario " + nombre[i]);
	            correoelectronico[i] = scanner.next();
	            System.out.println("Ingresa la contraseña del usuario " + nombre[i]);
	            contraseña[i] = scanner.next();
	            System.out.println("¡Usuario registrado con éxito!");
	        }
	}
