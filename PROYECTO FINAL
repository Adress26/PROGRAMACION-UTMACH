import java.util.ArrayList;
import java.util.Scanner;

public class Plataforma {
    // ... (Otros)

    private ArrayList<User> usuarios;
    private ArrayList<Course> cursosDisponibles;

    public Plataforma() {
        // ... (Inicializar)
        this.usuarios = new ArrayList<>();
        this.cursosDisponibles = new ArrayList<>();
    }

    // ... (Otros metodos)

    public void agregarUsuario(User usuario) {
        usuarios.add(usuario);
    }

    public void agregarCurso(Course curso) {
        cursosDisponibles.add(curso);
    }

    public void matricularUsuarioEnCurso(int userIndex, int courseIndex) {
        usuarios.get(userIndex).matricularCurso(cursosDisponibles.get(courseIndex));
    }

    public void mostrarProgresoCurso(int userIndex, int courseIndex) {
        System.out.println("Progreso del curso: " + usuarios.get(userIndex).getProgresoCurso(cursosDisponibles.get(courseIndex).getName()));
    }

    public static void main(String[] args) {
        Plataforma plataforma = new Plataforma();
        Scanner scanner = new Scanner(System.in);

        // Agregar mas cursos
        plataforma.agregarCurso(new Course("Matematicas"));
        plataforma.agregarCurso(new Course("Lenguaje"));
        plataforma.agregarCurso(new Course("Sociales"));
        plataforma.agregarCurso(new Course("Ingles"));
        plataforma.agregarCurso(new Course("Historia"));

        while (true) {
            plataforma.mostrarOpciones();
            int opcion = scanner.nextInt();

            switch (opcion) {
                case 1:
                    plataforma.mostrarCursos();
                    int courseOption = scanner.nextInt();
                    plataforma.matricularUsuarioEnCurso(0, courseOption - 1);
                    break;
                case 2:
                    plataforma.mostrarProgresoCurso(0, 0);
                    break;
                case 3:
                    plataforma.registrarUsuario();
                    break;
                case 4:
                    plataforma.iniciarSesion();
                    break;
                default:
                    System.out.println("Opción inválida");
            }
        }
    }
}
